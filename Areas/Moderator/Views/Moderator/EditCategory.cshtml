@model WikiSystem.Data.Models.Category

@{
    ViewData["Title"] = "Редактирай категория";
}

<h1 class="add-row">Редактирай категория</h1>

<div class="add-row">
    <div class="col-md-4">
        <form asp-action="EditCategory">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label">Име</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Редактирай" class="btn btn-primary" />
                <a asp-action="CategoryList" asp-controller="Moderator" asp-area="Moderator" class="btn btn-primary">Обратно към листа с категории</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
