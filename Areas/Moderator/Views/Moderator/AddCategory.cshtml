@model WikiSystem.Data.Models.Category

@{
    ViewData["Title"] = "Добави категория";
}

<h1 style="margin-left:40%; margin-top:100px;">Добави категория</h1>

<div class="row" style="margin-left:40%">
    <div class="col-md-4">
        <form asp-action="AddCategory">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Име</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Добави" class="btn btn-primary" />
                <a asp-action="ModeratorPanel" asp-controller="Moderator" asp-area="Moderator" class="btn btn-primary">Обратно към модератор панела</a>
            </div>
        </form>
    </div>
</div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
