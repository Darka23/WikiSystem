@model IEnumerable<WikiSystem.Data.Models.Category>

@{
    ViewData["Title"] = "Лист с категории";
}

<h1 class="add-row" style="margin-top:30px;">Лист с категории</h1>


    <a asp-action="AddCategory" asp-controller="Moderator" asp-area="Moderator" class="btn btn-primary">Добави категория</a>

<table class="table" style="width:30%; margin-left:35%;">
    <thead>
        <tr>
            <th>
                Име
            </th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td style="width:280px;">
                <a asp-action="EditCategory" asp-controller="Moderator" asp-area="Moderator" asp-route-id="@item.Id" class="btn btn-success">Редактирай</a> |
                <a asp-action="DeleteCategory" asp-controller="Moderator" asp-area="Moderator" asp-route-id="@item.Id" class="btn btn-danger">Изтрий</a>
            </td>
        </tr>
}
    </tbody>
</table>
