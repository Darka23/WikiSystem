<div class="content-wrapper" >
    <section class="content" style="margin-left:22%;">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-3">
                </div>
            </div>

            <div class="col-md-9">
                <div class="card card-primary card-outline" style="margin-top:60px;">


                    <div class="card-body p-0">
                        <div class="mailbox-read-info">
                            <h5>@Model.Title</h5>
                            <h6>
                                От: @Model.Publisher.UserName
                                <span class="mailbox-read-time float-right">@Model.PublishDate</span>
                                <br />
                                <span class="mailbox-read-time float-right">@Model.LastEditDate</span>
                            </h6>
                        </div>

                        <div class="mailbox-read-message">
                            <p>
                                @Model.Description
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>